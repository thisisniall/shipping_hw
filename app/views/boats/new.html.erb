<h2>New Boat:</h2>
<%= form_for @boat, :url => boats_path, :html => { :multipart => true } do |b| %>
	<%= b.label :boatname %>
	<%= b.text_field :boatname %>
	<br>
	<%= b.label :max_cargo %>
	<%= b.text_field :max_cargo %>
	<br>
	<%= b.hidden_field :current_cargo, :value => 0 %>
	<%= b.collection_select :current_location, Location.all, :id, :location_name, {:prompt => "Select a Location!"} %>
	<br>
	<%= b.label :avatar %>
	<%= b.file_field :avatar %>
	<br>
	<%= b.submit :class => "button" %>
<% end %>

